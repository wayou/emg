{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "es2015",
    "jsx": "react",
    "target": "es5",
    "lib": ["es6", "dom"],
    "moduleResolution": "node",
    "sourceMap": true, // also enalbe rollup.output.sourcemap to get sourcemap work
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "declaration": true
  },
  "exclude": [
    "examples", // exclude example directory when generating publish files
    "dist",
    "node_modules",
    "build",
    "scripts",
    "acceptance-tests",
    "jest",
    "src/setupTests.ts"
  ]
}
